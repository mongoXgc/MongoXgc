<%- include('footer.ejs') %>

<script>
    const conditionSelect = document.querySelector('#condition');
    const anemiaForm = document.querySelector('#anemia-form');
    const heartForm = document.querySelector('#heart-form');

    conditionSelect.addEventListener('change', function () {
        if (this.value === 'anemia') {
            anemiaForm.style.display = 'block';
            heartForm.style.display = 'none';
        } else {
            anemiaForm.style.display = 'none';
            heartForm.style.display = 'block';
        }
    });
</script>

